<div class="container">
<p id="notice"><%= notice %></p>

<h1>進貨</h1>

<table class="table">
  <thead>
    <tr>
      <th>產品名稱</th>
      <th>數量</th>
      <th>成本</th>
      <th>售價</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchases.each do |purchase| %>
      <tr>
        <td><%= purchase.item.item_name %></td>
        <td><%= purchase.purchase_quantity %></td>
        <td><%= purchase.purchase_cost %></td>
        <td><%= purchase.purchase_price %></td>
        <td><%= link_to 'Show', purchase, class: "btn btn-success", style: "color:white" %></td>
        <td><%= link_to 'Edit', edit_purchase_path(purchase), class: "btn btn-warning", style: "color:white" %></td>
        <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger", style: "color:white" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "新增", new_purchase_path, class: "btn btn-info", style: "color:white" %>
<%= link_to "返回", welcome_index_path, class: "btn btn-primary", style: "color:white" %>
</div>