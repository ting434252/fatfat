<div class="container">
<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table">
  <thead>
    <tr>
      <th>商品名稱</th>
      <th>訂購數量</th>
      <th colspan="3"></th>
    </tr>
    <link rel="stylesheet" href="/Content/bootstrap-datetimepicker.css" />
  </thead>
  
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        
        <td><%= order.item_id %></td>
        <td><%= order.order_quantity %></td>
        <td><%= link_to 'Show', order, class: "btn btn-success", style: "color:white"  %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-warning", style: "color:white" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger", style: "color:white" %></td>
   
      </tr>
    <% end %>
  </tbody> 

</table>
 
<br>

<input type="date">
<br>

<br>

<%= link_to '新增商品', new_order_path, class: "btn btn-info", style: "color:white" %>
<%= link_to "返回", welcome_index_path, class: "btn btn-primary", style: "color:white" %>


<br>
</div>
